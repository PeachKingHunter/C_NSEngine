.Script

// Click on the number
if(buttonNum == numGamePos){
  // Get numbers
  add number actuGameNum;
  add actuGameNum 1;
  add actuGameNum numberGetMoreNumbers;

  startScript gameNewNumberScript;
  stopScript;
}

// Click on the red block
if (buttonNum == redBlockGamePos) {
  //Reset Number
  set actuGameNum 0;
  add actuGameNum numberGetStartingNumbers;

  startScript gameNewNumberScript; 
  stopScript;
}

// Click on a ruby
if (buttonNum == rubyGamePos) {
  // Remove ruby of the game's grid
  startScript gameButtonChangeImage numPos rubyGamePos val " ";
  set rubyGamePos 11;

  // Increase Ruby
  add ruby 1;
  printf "Your count of ruby: " + ruby;

  stopScript;
}
