.StartLate
// Display
int newBoost = numberGetRubySpawnChance;
add newBoost 1;
int actuBoost = numberGetRubySpawnChance;
changeTextOf(getRubySpawnChanceDesc, actuBoost + "% -> " + newBoost + "%");
changeTextOf(getRubySpawnChancePrice, numberGetRubySpawnChancePrice);

if numberGetRubySpawnChance > 0 {
  showOf rubyShopWindow;
  printf "rubyShopWindow -> should be visible now"
}

if numberGetRubySpawnChance > 99 {
  hideOf getRubySpawnChanceButtonX1;
  hideOf getRubySpawnChanceButtonX10;
  hideOf getRubySpawnChanceDesc;
  hideOf getRubySpawnChanceName;
  hideOf getRubySpawnChancePrice;
  printf "ruby's chance upgrade in number's shop -> should be invisible now"
}

.Script
if(numberGetRubySpawnChancePrice > number){
  stopScript;
}

// Display ruby's shop
if numberGetRubySpawnChance == 0 {
  showOf rubyShopWindow;
  printf "rubyShopWindow -> should be visible now"
}

// Hide it if fully purchased
if numberGetRubySpawnChance > 99 {
  hideOf getRubySpawnChanceButtonX1;
  hideOf getRubySpawnChanceButtonX10;
  hideOf getRubySpawnChanceDesc;
  hideOf getRubySpawnChanceName;
  hideOf getRubySpawnChancePrice;
  printf "ruby's chance upgrade in number's shop -> should be invisible now"
  stopScript;
}

// Use money and increase price
minus number numberGetRubySpawnChancePrice;
add numberGetRubySpawnChancePrice 10;

// increase the upgrade
add numberGetRubySpawnChance 1;
add numberGetRubySpawnChanceQuant 1;

// Display
int newBoost = numberGetRubySpawnChance;
add newBoost 1;
int actuBoost = numberGetRubySpawnChance;
changeTextOf(getRubySpawnChanceDesc, actuBoost + "% -> " + newBoost + "%");
changeTextOf(getRubySpawnChancePrice, numberGetRubySpawnChancePrice);
